Bootstrap: docker
From: pytorch/pytorch:2.0.0-cuda11.7-cudnn8-devel

%files
    ./detector.py /
    ./entrypoint.py /
    ./utils /
    ./metaparameters.json /
    ./metaparameters_schema.json /
    ./learned_parameters /

%post
    apt update

    pip install --upgrade pip
    pip install jsonschema scikit-learn==1.3.0 transformers accelerate peft
    pip install sentence_transformers

%runscript
    exec python3 /entrypoint.py "$@"
